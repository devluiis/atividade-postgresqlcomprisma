generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Courses {
  id String @id @default(uuid()) 
  name String @unique // unique (único)
  description String? // ? (opcional)
  duration Int 
  created_at DateTime @default(now()) //now (atual)
  
  teacher Teachers @relation(fields: [fk_id_teacher], references: [id])
  fk_id_teacher String @unique // chave estrangeira para o professor

   @@map("courses") //map (reescreve o nome da tabela)
}

model Teachers {
  id String @id @default(uuid())
  name String @unique
  
  course Courses?

  @@map("teachers")
}


model Modules {
  id String @id @default(uuid())
  name String @unique
  description String
  created_at DateTime @default(now())

  @@map("modules")
}

model Authors {
  id String @id @default(uuid())
  name String @unique

  books Books[] //vários livros

  @@map("authors")
}

model Books{
  id String @id @default(uuid())
  name String @unique
  year Int @default(2000)

  author_id String 
  author Authors @relation(fields: [author_id], references: [id])

  @@map("books")
}