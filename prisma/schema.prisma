generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Courses {
  id String @id @default(uuid()) 
  name String @unique 
  description String? // ? (opcional)
  duration Int 
  created_at DateTime @default(now()) //now (atual)
  
  modules CoursesModules[] // um curso pode ter vários módulos

   @@map("courses") //map (reescreve o nome da tabela)
}


model Modules {
  id String @id @default(uuid())
  name String @unique
  description String
  created_at DateTime @default(now())

  courses CoursesModules[] // um módulo pode pertencer a vários cursos

  @@map("modules")
}

model CoursesModules {
  id String @id @default(uuid())

  // chave estrangeira de Courses
  course Courses @relation(fields: [fk_id_course], references: [id])
  fk_id_course String

  // chave estrangeira de módulos
  module Modules @relation(fields: [fk_id_module], references: [id])
  fk_id_module String

  created_at DateTime @default(now())

  @@map("courses_modules")
}

model Teachers {
  id String @id @default(uuid())
  name String @unique
  
  @@map("teachers")
}

