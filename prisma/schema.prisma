generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Courses {
  id          String           @id @default(uuid())
  name        String           @unique
  description String?
  duration    Int
  created_at  DateTime         @default(now())

  courses_modules CoursesModules[]

  @@map("courses")
}

model Modules {
  id          String           @id @default(uuid())
  name        String           @unique
  description String
  created_at  DateTime         @default(now())

  courses_modules CoursesModules[]

  @@map("modules")
}

model CoursesModules {
  id            String   @id @default(uuid())
  fk_id_course  String
  fk_id_module  String
  created_at    DateTime @default(now())

  course Courses @relation(fields: [fk_id_course], references: [id])
  module Modules @relation(fields: [fk_id_module], references: [id])

  @@map("courses_modules")
}
