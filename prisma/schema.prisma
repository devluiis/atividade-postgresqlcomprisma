generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Courses {
  id String @id @default(uuid()) /* */
  name String @unique /* unique (Ãºnico) */
  description String? /* ? (opcional) */
  duration Int 
  created_at DateTime @default(now()) /* now (atual) */

  @@map("courses") /* map (reescreve o nome da tabela) */

}

model Modules {
  id String @id @default(uuid())
  name String @unique
  description String
  created_at DateTime @default(now())

  @@map("modules")
}
